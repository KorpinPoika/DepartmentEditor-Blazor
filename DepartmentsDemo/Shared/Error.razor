@using Microsoft.Extensions.Logging
@inject ILogger<Error> Logger

<CascadingValue Value="this">
    @ChildContent
</CascadingValue>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    public void ProcessError(Exception ex, string? errorMessage = null)
    {
        Logger.LogError("Error: {ErrorMessage} ProcessError - Type: {Type} Message: {Message}", 
            ex.GetType(), ex.Message, errorMessage);
    }
}